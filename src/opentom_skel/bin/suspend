#! /bin/sh

# save display brighness
BRI=`cat /sys/class/backlight/s3c/brightness`
MNTROPT=`mount | grep ext2 | cut -f2 -d"(" | cut -f1 -d")"`

# If we find the pid of gltt restart it after resume 
glttpid=`pidof gltt` 

echo 0 >/sys/class/backlight/s3c/brightness
set_cpu_governor powersave
rc.gltt stop
stop_bt -s

if [ ! -z "$MNTROPT" ]; then
	mount -oremount,ro /
	sync
fi

sync
#echo mem > /sys/power/state

if [ ! -z "$MNTROPT" ]; then
	mount -oremount,$MNTROPT /
fi

set_cpu_governor performance

# resore brightness
echo $BRI >/sys/class/backlight/s3c/brightness

# restart gltt it run before suspend
[ -z $glttpid ] || rc.gltt start

